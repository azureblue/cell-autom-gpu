{
    "ca": {
        "buffer": {
            "width": 2048,
            "height": 1024
        },

        "view": {
            "scale": 2,
            "center": [256, 256]
        },

        "room": {
            "width": 256,
            "height": 256,
            "rule": "B3/S23",
            "separate": true
        }
    },

    "state": [
        { "room": [0, 0], "dataset": "random256x256" },
        { "room": [1, 0], "dataset": "random256x256" },
        { "room": [0, 1], "dataset": "random256x256" },
        { "room": [1, 1], "dataset": "random256x256" }
    ],

    "datasets": {
        "checker256x256": {
            "width": 256,
            "height": 256,
            "format": "bits",
            "url": "checker256.bits"
        },        
        "random256x256": {
            "width": 256,
            "height": 256,
            "format": "random"
        }
    }
}
